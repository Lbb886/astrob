---
import { SITE } from '~/config.mjs';
import Layout from '~/layouts/PageLayout.astro';
import { getPermalink } from '~/utils/permalinks';

import LatestPosts from '~/components/blog/LatestPosts.astro';
import LatestProjects from '~/components/project/LatestProjects.astro';

const meta = {
  title: SITE.title,
  description: SITE.description,
  dontUseTitleTemplate: true,
};
---

<Layout {meta}>
  <section class="page">
    <div class="space-y-4 mb-12">
      <h1 class="font-bold text-2xl md:text-3xl leading-9">
        {`Hi there 👋`}
      </h1>
      <p class="leading-9 text-lg">
        我是
        <span class="font-bold text-transparent bg-clip-text bg-gradient-to-r from-green-500 to-lime-400">
          Qingwave
        </span>
        ，一名开发者、白日梦想家，在这里会分享一些技术文章以及碎碎念。你可以通过
        <a class="link" href="https://github.com/qingwave" target="_blank"> Github</a>
        、
        <a class="link" href="mailto:isguory@gmail.com"> Email</a>
        、
        <a class="link" href="https://juejin.cn/user/2576910988872951" target="_blank"> 掘金</a>
        、<a class="link" href="https://mp.weixin.qq.com/mp/qrcode?scene=10000004&size=102&__biz=Mzg3Njg0ODI0Ng==&mid=2247483780&idx=1&sn=a84ca41b45876db07f40a36316a3a7e4&send_time=" target="_blank">公众号</a>
        找到我，或者
        <a class="link" href={getPermalink("/about")}> 关于我</a>。
      </p>
    </div>

    <!-- Posts ******* -->
    <LatestPosts title="文章" allPostsText="查看全部" />

    <!-- Projects ******* -->
    <LatestProjects title="项目" text="查看全部" />
  </section>
</Layout>
