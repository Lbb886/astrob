---
import Layout from '~/layouts/PageLayout.astro';
import Headline from '~/components/blog/Headline.astro';
import Comment from '~/components/common/Comment.astro';

import { SITE } from '~/config.mjs';
import { Content as About } from '~/content/common/about.md';

const meta = {
  title: `About`,
  description: SITE.description,
};
---

<Layout meta={meta}>
  <section class="px-6 sm:px-6 py-12 sm:py-16 lg:py-20 mx-auto max-w-3xl">
    <Headline>关于我</Headline>
    <div
      class="prose prose-lg lg:prose-xl dark:prose-invert dark:prose-headings:text-slate-300 prose-md prose-headings:font-heading prose-headings:leading-tighter prose-headings:tracking-tighter prose-headings:font-bold prose-a:text-primary dark:prose-a:text-blue-400 prose-img:rounded-md prose-img:shadow-lg"
    >
      <About />
    </div>
    <Comment />
  </section>
</Layout>
