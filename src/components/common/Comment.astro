---
import { SITE } from '~/config.mjs';
const repodId = import.meta.env.PUBLIC_GISCUS_REPO_ID;
const categoryId = import.meta.env.PUBLIC_GISCUS_CATEGORAY_ID;
const theme = SITE.defaultTheme;
---

<div class="giscus-container mx-auto px-6 sm:px-6 py-16 max-w-3xl text-muted dark:text-slate-400">
  <script
    src="https://giscus.app/client.js"
    data-repo="qingwave/qingwave.github.io"
    data-repo-id={repodId}
    data-category="Announcements"
    data-category-id={categoryId}
    data-mapping="title"
    data-strict="0"
    data-reactions-enabled="1"
    data-emit-metadata="0"
    data-input-position="top"
    data-theme={theme}
    data-lang="en"
    crossorigin="anonymous"
    async
  ></script>
</div>
