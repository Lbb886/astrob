---
export interface Props {
  title: string;
  subtitle?: string;
  link?: string;
}

const { title, subtitle, link } = Astro.props;
---

<header class="mb-6 mx-auto">
  <div class="text-3xl md:text-4xl font-bold leading-tighter tracking-tighter font-heading">
    {link ? (
      <a href={link} set:html={title}></a>
    ) : (
      <div set:html={title}></div>
    )}
  </div>
  

  {
    subtitle && (
      <div class="mt-2 md:mt-3 mx-auto text-xl text-gray-500 dark:text-slate-400 font-medium" set:html={subtitle} />
    )
  }
</header>
